---
const categories = [
  {
    name: "French Cuisine",
    image: "https://images.pexels.com/photos/2122294/pexels-photo-2122294.jpeg",
    slug: "french",
    description: "Classic dishes from the heart of France"
  },
  {
    name: "Italian Classics",
    image: "https://images.pexels.com/photos/1527603/pexels-photo-1527603.jpeg",
    slug: "italian",
    description: "Traditional recipes from Italy"
  },
  {
    name: "Desserts",
    image: "https://images.pexels.com/photos/291528/pexels-photo-291528.jpeg",
    slug: "desserts",
    description: "Sweet treats and delightful pastries"
  },
  {
    name: "Seasonal Recipes",
    image: "https://images.pexels.com/photos/1660027/pexels-photo-1660027.jpeg",
    slug: "seasonal",
    description: "Fresh ingredients for every season"
  }
];
---

<section class="py-16 bg-cream">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-heading text-4xl text-burgundy mb-4">Explore Categories</h2>
      <div class="w-24 h-1 bg-burgundy/20 mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {categories.map((category) => (
        <a 
          href={`/recipes/category/${category.slug}`}
          class="group relative rounded-xl overflow-hidden shadow-lg transform hover:-translate-y-1 transition-all duration-300"
        >
          <div class="aspect-[4/5]">
            <img 
              src={category.image} 
              alt={category.name} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
            <div class="absolute inset-x-0 bottom-0 p-6 text-white">
              <h3 class="font-heading text-2xl mb-2 group-hover:text-cream transition-colors">
                {category.name}
              </h3>
              <p class="text-cream/80 text-sm">
                {category.description}
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>