---
import { Icon } from 'astro-icon';
import FeaturedRecipe from '../ui/FeaturedRecipe.astro';

interface Props {
  recipe: {
    title: string;
    description: string;
    image: string;
    slug: string;
    cookTime: string;
    difficulty: string;
  };
}

const { recipe } = Astro.props;
---

<section id="featured" class="py-16">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-baseline mb-8">
      <h2 class="font-heading text-3xl text-burgundy">Featured Recipe</h2>
      <a href="/recipes" class="text-olive hover:text-burgundy transition-colors font-medium flex items-center">
        View all recipes
        <Icon name="heroicons-outline:arrow-right" class="w-4 h-4 ml-1" />
      </a>
    </div>
    
    <FeaturedRecipe 
      title={recipe.title}
      description={recipe.description}
      image={recipe.image}
      slug={recipe.slug}
      cookTime={recipe.cookTime}
      difficulty={recipe.difficulty}
    />
  </div>
</section> 